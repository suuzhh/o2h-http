{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "ES2017",
    "module": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "Bundler",
    "rootDir": ".",
    "paths": {
      "@/*": [
        "./src/*",
      ]
    },
  },
  "include": [
    "./src/**/*",
    "./example/**/*"
  ]
}